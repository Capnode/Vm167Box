<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Vm167Demo.Views.ScopePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Vm167Demo.ViewModels"
    xmlns:oxy="clr-namespace:OxyPlot.Maui.Skia;assembly=OxyPlot.Maui.Skia"
    x:DataType="vm:MainViewModel"
    Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <oxy:PlotView Grid.Row="0" Model="{Binding AnalogInModel}" />
        <oxy:PlotView Grid.Row="1" Model="{Binding PwmOutModel}" />
    </Grid>
</ContentPage>