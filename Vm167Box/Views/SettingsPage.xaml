<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Vm167Box.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Vm167Box.Behaviors"
    xmlns:strings="clr-namespace:Vm167Box.Resources"
    xmlns:vm="clr-namespace:Vm167Box.ViewModels"
    x:DataType="vm:SettingsViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding ResetCommand}"
            IconImageSource="replay.png"
            Text="{x:Static strings:AppResources.Reset}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Margin="10" Spacing="10">
            <HorizontalStackLayout Spacing="10">
                <Label Text="{x:Static strings:AppResources.ThemeToggle}" VerticalOptions="Center" />
                <Switch IsToggled="{Binding IsLightTheme}" />
            </HorizontalStackLayout>
            <Frame Padding="10,2,10,2">
                <VerticalStackLayout>
                    <Label Text="{x:Static strings:AppResources.AnalogIn}" VerticalOptions="StartAndExpand" />
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Analog1}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Analog1Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Analog1Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Analog1Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Analog1Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Analog1Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Analog1Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Analog2}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Analog2Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Analog2Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Analog2Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Analog2Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Analog2Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Analog2Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Analog3}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Analog3Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Analog3Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Analog3Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Analog3Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Analog3Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Analog3Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Analog4}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Analog4Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Analog4Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Analog4Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Analog4Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Analog4Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Analog4Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Analog5}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Analog5Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Analog5Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Analog5Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Analog5Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Analog5Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:AnalogBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Analog5Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            <Frame Padding="10,2,10,2">
                <VerticalStackLayout>
                    <Label Text="{x:Static strings:AppResources.PwmOut}" VerticalOptions="StartAndExpand" />
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Pwm1}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Pwm1Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Pwm1Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Pwm1Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Pwm1Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Pwm1Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Pwm1Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            Text="{x:Static strings:AppResources.Pwm2}"
                            VerticalOptions="Center"
                            MinimumWidthRequest="60" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Name}"
                            Text="{Binding Pwm2Name}"
                            MinimumWidthRequest="100" />
                        <Entry
                            Placeholder="{x:Static strings:AppResources.Unit}"
                            Text="{Binding Pwm2Unit}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point1}"
                            Text="{Binding Pwm2Point1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value1}"
                            Text="{Binding Pwm2Value1}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Point2}"
                            Text="{Binding Pwm2Point2}"
                            MinimumWidthRequest="60" />
                        <Entry
                            behaviors:PwmBehavior.NumericValidationBehavior="True"
                            Placeholder="{x:Static strings:AppResources.Value2}"
                            Text="{Binding Pwm2Value2}"
                            MinimumWidthRequest="60" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
